
<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    {# LOGO <link rel="icon" type="image/png" href="{{ absolute_url(asset('img/logo.jpg')) }}" /> #}

    {# ============= TITLE ============= #}
    <title>{% block title %}QCMECN{% endblock %}</title>

    {# ============= STYLES ============= #}
    {% block stylesheets %}
        <!-- Font Awesome -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

        {% stylesheets filter='cssrewrite, ?scssphp'
        'css/bootstrap.min.css'
        'css/mdb.min.css'
        'css/visitor/style.css'
        output='css/visitor/compiled/app.css'%}
        <link rel="stylesheet" href="{{ asset_url }}?d={{ "now"|date("dmy") }}" type="text/css" />
        {% endstylesheets %}
    {% endblock %}

</head>

<body>

    <header>
        <!--Navbar-->
        <nav class="navbar navbar-expand-lg navbar-dark blue-gradient">

            <!-- Navbar brand -->
            <a class="navbar-brand" href="{{ path('homepage') }}">QCMECN</a>

            <!-- Collapse button -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#basicExampleNav" aria-controls="basicExampleNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Collapsible content -->
            <div class="collapse navbar-collapse" id="basicExampleNav">
                <!-- Links -->
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('homepage') }}">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('qcm_ranked_home') }}">Questions du jour</a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('qcm_training_launcher') }}">Entraînement</a>
                    </li>
                    {% endif %}
                </ul>
                <!-- Links -->

                {{ render(controller('AppBundle:Visitor/Main:userNav')) }}

            </div>
            <!-- Collapsible content -->

        </nav>
        <!--/.Navbar-->
    </header>

    <div class="container-fluid" id="mainContainer">
        {% block body %}
        {% endblock %}
    </div>

    {% block footer %}
        <!--Footer-->
        <footer class="page-footer text-center font-small blue-gradient mt-4 wow fadeIn" style="padding-top: 0px;">
            {#
            <!--Call to action-->
            <div class="pt-2 pb-3">
                <a class="btn btn-sm btn-outline-white" href="{{ path('homepage') }}ttps://mdbootstrap.com/getting-started/" target="_blank" role="button">Retour au site
                    <i class="fa fa-sign-out ml-2"></i>
                </a>
            </div>
            <!--/.Call to action-->
             #}
            <!--Copyright-->
            <!--Copyright-->
            <div class="footer-copyright py-3" style="height: 75px;">
                © {{ 'now'|date('Y') }} Copyright:
                <span style="color:white;"> QCMECN.com</span>
            </div>
            <!--/.Copyright-->
            <!--/.Copyright-->

        </footer>
        <!--/.Footer-->
    {% endblock %}


    {# ============= SCRIPTS ============= #}
    {% block javascripts %}

        {% javascripts filter='?jsqueeze'
        'js/jquery-3.1.1.min.js'
        'js/popper.min.js'
        'js/bootstrap.min.js'
        'js/mdb.min.js'
        'js/visitor/main.js'
        output='js/visitor/compiled/app.js' %}
        <script type="text/javascript" src="{{ asset_url }}?d={{ "now"|date("dmy") }}"></script>
        {% endjavascripts %}

    {% endblock %}

</body>
</html>