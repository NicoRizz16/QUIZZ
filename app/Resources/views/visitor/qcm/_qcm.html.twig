
<h5> {{ qcm.question }}</h5>
<hr class="my-2">

<div class="progress" style="height: 10px">
    <div id="countDownProgressBar" class="progress-bar bg-success" role="progressbar" style="width: {{ ((countDown/qcm.countDown)*100)|round }}%; height: 10px" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
</div>

<form name="answer_qcm_form" method="post" id="answer_qcm_form_correction">

    <table id="qcmTable" class="table table-striped table-responsive-md">
        <tbody>
        <tr>
            <th scope="row" class="checkBoxTableCell">
                A
            </th>
            <td class="checkBoxTableCell">
                <input type="checkbox" id="answer_qcm_form_veracityA" name="answer_qcm_form[veracityA]" class="form-check-input" value="1" />
                <label class="form-check-label" for="answer_qcm_form_veracityA"></label>
            </td>
            <td>
                {{ qcm.answerA }}
            </td>
        </tr>
        <tr>
            <th scope="row" class="">
                B
            </th>
            <td class="checkBoxTableCell">
                <input type="checkbox" id="answer_qcm_form_veracityB" name="answer_qcm_form[veracityB]" class="form-check-input" value="1" />
                <label class="form-check-label" for="answer_qcm_form_veracityB"></label>
            </td>
            <td>{{ qcm.answerB }}</td>
        </tr>
        <tr>
            <th scope="row" class="checkBoxTableCell">
                C
            </th>
            <td class="checkBoxTableCell">
                <input type="checkbox" id="answer_qcm_form_veracityC" name="answer_qcm_form[veracityC]" class="form-check-input" value="1" />
                <label class="form-check-label" for="answer_qcm_form_veracityC"></label>
            </td>
            <td>{{ qcm.answerC }}</td>
        </tr>
        <tr>
            <th scope="row" class="checkBoxTableCell">
                D
            </th>
            <td class="checkBoxTableCell">
                <input type="checkbox" id="answer_qcm_form_veracityD" name="answer_qcm_form[veracityD]" class="form-check-input" value="1" />
                <label class="form-check-label" for="answer_qcm_form_veracityD"></label>
            </td>
            <td>{{ qcm.answerD }}</td>
        </tr>
        <tr>
            <th scope="row" class="checkBoxTableCell">
                E
            </th>
            <td class="checkBoxTableCell">
                <input type="checkbox" id="answer_qcm_form_veracityE" name="answer_qcm_form[veracityE]" class="form-check-input" value="1" />
                <label class="form-check-label" for="answer_qcm_form_veracityE"></label>
            </td>
            <td>{{ qcm.answerE }}</td>
        </tr>
        </tbody>
    </table>

    <p class="text-center">
        <button type="submit" class="btn btn-amber btn-rounded" id="answer_qcm_form_button" formnovalidate>Valider</button>
    </p>

</form>

