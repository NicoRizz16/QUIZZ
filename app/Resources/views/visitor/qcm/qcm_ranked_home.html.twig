        <li class="nav-item">
            <a class="nav-link" href="{{ path('homepage') }}">Accueil
            </a>
        </li>
        <li class="nav-item active">
            <a class="nav-link" href="{{ path('qcm_ranked_home') }}">QCM classés
                <span class="sr-only">(current)</span>
            </a>
        </li>
        <li class="nav-item">
