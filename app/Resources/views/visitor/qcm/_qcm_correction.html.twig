<div class="card mb-3 text-center hoverable rgba-green-slight">
    <div class="card-body">
        <!--Grid row-->
        <div class="row">
            {% if qcm.commentImageFile is not null %}
                <!--Grid column-->
                <div class="col-md-4">
                    <!--Featured image-->
                    <div class="view overlay">
