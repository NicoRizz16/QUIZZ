{% extends ":visitor:layout_sign_in_up.html.twig" %}

{% block fos_user_content %}

    <div class="col-md-6 offset-md-3 mt-5">
        <section class="form-elegant">

            <!--Form without header-->
            <div class="card">

                <div class="card-body mx-4">

                    <!--Header-->
                    <div class="text-center">
                        <h3 class="dark-grey-text mb-5"><strong>Connexion</strong></h3>
                    </div>

                    <!--Body-->
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}

                        <div class="md-form">
                            <i class="fa fa-user prefix {% if error %}text-danger{% endif %}" aria-hidden="true"></i>
                            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" />
                            <label for="username">Nom d'utilisateur ou email</label>
                        </div>

                        <div class="md-form pb-3">
                            <i class="fa fa-lock prefix {% if error %}text-danger{% endif %}"></i>
                            <input type="password" id="password" class="form-control" name="_password" required="required" />
                            <label for="password">Mot de passe</label>
                            <p class="font-small blue-text d-flex justify-content-end"><a href="{{ path('fos_user_resetting_request') }}" class="blue-text ml-1">Mot de passe oubli√© ?</a></p>
                        </div>

                        <div class="text-center mb-3">
                            <button type="submit" id="_submit" class="btn blue-gradient btn-block btn-rounded z-depth-1a" name="_submit" formnovalidate>Connexion</button>
                        </div>
                    </form>

                </div>

                <!--Footer-->
                <div class="modal-footer mx-5 pt-3 mb-1">
                    <p class="font-small grey-text d-flex justify-content-end">Pas encore membre ? <a href="{{ path('fos_user_registration_register') }}" class="blue-text ml-1"> S'inscrire</a></p>
                </div>

            </div>
            <!--/Form without header-->
        </section>
    </div>

{% endblock fos_user_content %}


{% block javascripts %}
    {{ parent() }}
    <script>

    </script>
{% endblock %}
